{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "build/js",
    "paths": { "*": ["typings/*"] },
    "removeComments": true,
    "rootDir": "src/ts",
    "target": "es6"
  }
}
